<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hzmt.facedetectusb.MainActivity">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="登陆"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="37dp"
        android:text="登记"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <EditText
        android:id="@+id/editUrl"
        android:layout_width="182dp"
        android:layout_height="122dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="48dp"
        android:background="@android:drawable/alert_light_frame"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintLeft_toRightOf="@+id/text_url"
        app:layout_constraintRight_toLeftOf="@+id/btn_seturl"
        app:layout_constraintTop_toBottomOf="@+id/btn_register" />

    <TextView
        android:id="@+id/text_url"
        android:layout_width="31dp"
        android:layout_height="21dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="135dp"
        android:text="URL:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register" />

    <Button
        android:id="@+id/btn_seturl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="设置"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        app:layout_constraintLeft_toRightOf="@+id/editUrl"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.404" />

</android.support.constraint.ConstraintLayout>
