<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hzmt.IDCardFdvUsb"
    android:sharedUserId="android.uid.system">

    <!--uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /-->
    <!--uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--uses-permission android:name="android.permission.BLUETOOTH" /-->
    <!--uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="idcardfdvupload.permission.Upload"/>
    <uses-permission android:name="idcardfdvupgrade.permission.Upgrade"/>

    <application
        android:name="com.hzmt.IDCardFdvUsb.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <service android:name=".CameraUtil.FdvRestfulService">
        </service>

        <activity
            android:name="com.hzmt.IDCardFdvUsb.MainActivity"
            android:screenOrientation = "landscape">
        </activity>

        <activity
            android:name="com.hzmt.IDCardFdvUsb.CameraUtil.CameraActivity"
            android:screenOrientation = "landscape">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name="com.hzmt.IDCardFdvUsb.SubActivity"
            android:screenOrientation = "landscape">
        </activity>

    </application>

</manifest>